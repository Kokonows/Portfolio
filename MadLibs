	<script>
		name = window.prompt("What's your name?",'');
		adjective = window.prompt("Give me an adjective.",'');
		person = window.prompt("Give me an person's name.",'');
		color = window.prompt("Give me a color.",'');
		animal = window.prompt("Give me an animal.",'');
		document.write("<center><h1>" + name + "'s Custom Mad Lib </center>");
		document.write("<h3> It was a " + adjective + " kind of day when ");
		document.write(person + " walked out into the street.");
		document.write(" The sky was a deep " + color + " and " + person);
		document.write(" was walking his new pet " + animal + ".");
	</script>
